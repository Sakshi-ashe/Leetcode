class Solution {
    public boolean isValid(String s) {
        Deque<Character> stack = new ArrayDeque<>();
        
        for(char ch : s.toCharArray()){
            // char is opening bracket
            if( ch == '(') {
                stack.push(')');
            }
            else if( ch == '[') {
                stack.push(']');
            }
            else if( ch == '{') {
                stack.push('}');
            }
            //char is closing bracket
            else{
                if(stack.isEmpty()){
                    return false;
                }
                else if(stack.peek() != ch){
                    return false;
                }               
                stack.pop();                            
            }
        }
        
        return (stack.isEmpty());
    }
    
}
